{# Basic page template with sidebar and navbar in container #}

{% extends "base.j2" %}

{% block container %}
<!-- Just so my name is somewhere on the phone screen size. -->
<div class="row">
<div class="inner-fluid clearfix">
    <div class="col-md-9 col-md-offset-3 visible-sm">
        <span style="font-size:14px;font-weight:200;"><h2>Nick Foti</h2></span>
    </div>
</div>
</div>

<!-- Navigation -->
<div class="row">
<div class="inner-fluid clearfix">
    <div class="col-md-9 col-md-offset-3">
    <div class="navigation">
        <ul class="nav nav-pills red">
        {% from "macros.j2" import render_navbar_items with context %}
        {{ render_navbar_items() }}
        {# Add contact.html in manually b/c it's a special case, can probably do it with site.yaml. #}
        <li class="visible-xs visible-sm"><a href="contact.html">Contact</a></li>
        </ul>
    </div>
    </div>
</div>
</div>

<!-- Both the sidebar and content are contained in the same row -->
<div class="row">
<div class="inner-fluid clearfix">

<!-- Sidebar -->
<div class="col-md-3 hidden-xs hidden-sm">
  <div class="jumbotron">
    <h2 style="text-align:center;">{{ author.name }}</h2>
    <img class="img-responsive" src="{{ media_url('images/madmen_fullbody_taupe-no-drink.jpg') }}"
     alt="Me" width="177" style="display:block;margin-left:auto;margin-right:auto;">
    <h4 style="text-align:left;">Contact Info</h4>
    <div>
        <h5>e-mail:</h5>
        <p style="text_size:5;">{{ author.email }}</p>
        <h5>office:</h5>
        {{ author.office }}
    </div>
  </div> <!-- hero-box -->
</div> <!-- span3 hidden-phone -->

<!-- Content -->
<div class="col-md-9">
<div class="jumbotron">
{% block boxcontents %}

{% endblock boxcontents %}
</div>
</div>


</div> <!-- inner-fluid clearfix -->
</div> <!-- row-fluid -->


{% endblock container %}
